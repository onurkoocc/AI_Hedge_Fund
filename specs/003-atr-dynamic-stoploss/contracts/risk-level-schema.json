{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Risk Level Calculation Result",
  "type": "object",
  "properties": {
    "stop_loss": {
      "type": "number",
      "description": "Absolute price for Stop Loss"
    },
    "take_profit": {
      "type": "number",
      "description": "Absolute price for Take Profit"
    },
    "stop_distance": {
      "type": "number",
      "description": "Absolute price distance from Entry to Stop Loss"
    },
    "stop_pct": {
      "type": "number",
      "description": "Stop distance as a percentage of entry price (0.01 = 1%)"
    },
    "rr_ratio": {
      "type": "number",
      "description": "Risk/Reward Ratio (TP Distance / SL Distance)"
    },
    "status": {
      "type": "string",
      "enum": ["OK", "LOW_RR", "VOLATILITY_TOO_HIGH", "VOLATILITY_UNDEFINED"],
      "description": "Compliance status of the risk parameters"
    }
  },
  "required": ["stop_loss", "take_profit", "status"]
}
